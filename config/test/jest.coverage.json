{
    "rootDir": "../../",
    "preset": "ts-jest",
    "restoreMocks": true,
    "setupFilesAfterEnv": ["<rootDir>/config/test/setup-after.ts"],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "common/test"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "function": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
  